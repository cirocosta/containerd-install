[Unit]
Description=containerd container runtime
Documentation=https://containerd.io
After=network.target

[Service]
Delegate=yes
Environment=PATH=/usr/local/concourse/bin
ExecStart=/usr/local/concourse/bin/containerd --config=/usr/local/kubelet-sample/conf/containerd.toml
ExecStartPre=-/sbin/modprobe overlay
KillMode=process
LimitCORE=infinity
LimitNOFILE=1048576
LimitNPROC=infinity
Restart=always
TasksMax=infinity

[Install]
WantedBy=multi-user.target
